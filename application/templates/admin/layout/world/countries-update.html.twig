<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1><i class="fas fa-star"></i> World Countries - Update Register</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a href="/admin/world">World</a>
                    </li>
                    <li class="breadcrumb-item active">Update Country</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-9">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <b>Country</b>
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <div class="input-group">
                                <input
                                    type="text"
                                    id="country-name"
                                    class="form-control"
                                    value="{{ country.name }}"
                                    placeholder="Enter the name of the country to search for its information">
                                <span class="input-group-append">
                                    <button id="country-name-button" type="button" class="btn btn-primary">Search <i class="fas fa-search"></i></button>
                                </span>
                            </div>
                            <input type="hidden" id="country-id" value="{{ country.id }}">
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <b>Country Data</b>
                        </h3>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th width="10%">#</th>
                                    <th width="40%">Property</th>
                                    <th width="40%">Content</th>
                                    <th width="10%">Action</th>
                                </tr>
                            </thead>
                            <tbody id="country-data-response">
                                <tr align="center">
                                    <td colspan="4">
                                        (no info)
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Actions</h3>
                    </div>
                    <div class="card-body">
                        <button id="update-register-button" class="btn btn-block btn-primary">Save Changes</button>
                    </div>
                    <div class="card-footer">
                        <a href="/admin/world/countries" id="go-back-button" class="btn btn-block btn-default">Back to list</a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Properties</h3>
                    </div>
                    <div class="card-body">
                        <button id="insert-property-button" class="btn btn-block btn-warning">Insert Property</button>
                    </div>
                    <div class="card-footer">
                    </div>
                </div>
            </div>
        </div><!-- /.row -->

    </div><!-- /.container-fluid -->
</section>
<input type="hidden" id="database-list" value="{{ content }}">
<input type="hidden" id="database-properties" value="{{ properties }}">